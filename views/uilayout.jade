html
	head
		title=title
		link(rel='shortcut icon', href='/favicon.ico', type='image/x-icon')
		link(rel='icon', href='/favicon.ico', type='image/x-icon')
		link(rel="stylesheet", href='/vendor/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/uicommon.css')
		block extraheads
	body
		.navbar.navbar-default.navbar-static-top(role='navigation')
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/')
						img(src="/favicon.ico", style="height:100%")
				-if(user){
				.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href='/')
								| Welcome #{user}
						li
							form.navbar-form(action="/logout", method="post")
								button.btn.btn-default(type="submit")
									| Logout
				-}
					
		block content
		script(type='text/javascript', src='/vendor/jquery.js')
		script(type='text/javascript', src='/vendor/bootstrap.min.js')
		block extratails